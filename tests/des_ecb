


-------------ENCODE---------------
-- demande un password et attend stdin
./ft_ssl_des_ecb
openssl des_ecb

Resultat different vu que pas la meme cle

--test fichier auteur

./ft_ssl des-ecb -p "salsifi" -i auteur -o res -P;
openssl des-ecb -pass "pass:salsifi" -in auteur -o res -P;

./ft_ssl des-ecb -p "dev" -i auteur -o res;
openssl des-ecb -p "pass:dev" -in auteur -o res2;

--test fichier auteur avec meme cle

./ft_ssl des-ecb -p "dev" -i auteur -o res -k CB6836DE80511354;
openssl des-ecb  -in auteur -o res2 -K CB6836DE80511354;


--test encode stdin avec key;
echo "foo bar" | openssl des-ecb -K 6162636461626364



---

./ft_ssl des-ecb  -p "salsifi"  -i auteur -P -k 845A91D02420FFD5  
openssl des-ecb -pbkdf2  -pass "pass:salsifi"  -in auteur -P -K 845A91D02420FFD5

---------------DECODE-------------